<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 필요한 권한 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Wear OS 지원 -->
    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MainActivityTheme.Starting">
        <activity
            android:name=".transportation.TransportNewPathSearchActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransNewPathDetatilActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransportationNewPathActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransportationSavedPathActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".iot.HomeIotActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".setting.SettingActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".audioguide.AudioGuideActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" /> <!-- 화면설정시에 Theme이 설정되어있지 않으면 화면 호출시에 오류가 남 화면 늘릴시마다 설정해 주어야 할듯 -->
        <activity
            android:name=".transportation.TransportationMainActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" /> <!-- Wear OS 전용 라이브러리 -->
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" /> <!-- MainActivity 선언 -->
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>