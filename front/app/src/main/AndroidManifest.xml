<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 필요한 권한 -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Wear OS 지원 -->
    <uses-feature android:name="android.hardware.type.watch" /> <!-- 정밀 위치 권한 요청 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 사용자 위치 받아오기 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 오디오 권한 요청 -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" /> <!-- 블루투스 권한 요청 -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" /> <!-- 기기 검색을 위한 권한(위치가 필요하지 않고 장비만 검색하기 위해 위치는 무시) -->

    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s" /> <!-- 페어링된 기기를 확인하기 위한 권한 -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MainActivityTheme.Starting">
        <activity
            android:name=".audioguide.AudioGuideBLEConnectActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransportInfrmationActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.dialog.TransSavedDialog"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransportDoyouWantSaveActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransportNewPathSearchActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransNewPathDetatilActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransportationNewPathActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransportationSavedPathActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".iot.HomeIotActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".setting.SettingActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".audioguide.AudioGuideActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" /> <!-- 화면설정시에 Theme이 설정되어있지 않으면 화면 호출시에 오류가 남 화면 늘릴시마다 설정해 주어야 할듯 -->
        <activity
            android:name=".transportation.TransportationMainActivity"
            android:exported="false"
            android:theme="@style/Transportation_Main_Theme" />

        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" /> <!-- MainActivity 선언 -->
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>