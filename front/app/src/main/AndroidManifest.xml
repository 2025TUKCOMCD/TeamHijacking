            android:taskAffinity=""
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".audioguide.AudioGuideBLEActivity"
            android:exported="false"
            android:taskAffinity=""
            android:theme="@style/Transportation_Main_Theme" /> <!-- 화면설정시에 Theme이 설정되어있지 않으면 화면 호출시에 오류가 남 화면 늘릴시마다 설정해 주어야 할듯 -->
        <activity
            android:name=".transportation.TransportationMainActivity"
            android:exported="false"
            android:taskAffinity=""
            android:theme="@style/Transportation_Main_Theme" />

        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="false" /> <!-- 시계 앱이 비독립형임을 선업 하는 코드 -->
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:taskAffinity=""
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".iot.DataListenerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>
    </application>

</manifest>