<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 필요한 권한 -->
    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" /> <!-- 백그라운드 동기화 권한 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Wear OS 지원 -->
    <uses-feature android:name="android.hardware.type.watch" /> <!-- 정밀 위치 권한 요청 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 사용자 위치 받아오기 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 오디오 권한 요청 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" /> <!-- 페어링된 기기를 확인하기 위한 권한 -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- 블루투스 권한 요청 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- 기기 검색을 위한 권한(위치가 필요하지 않고 장비만 검색하기 위해 위치는 무시) -->
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/MainActivityTheme.Starting">
        <activity
            android:name=".transportation.TransportDetailRouteControlActivity"
            android:exported="false" />
        <activity
            android:name=".audioguide.AudioSignalMuchineBLEControl"
            android:exported="false" />
        <activity
            android:name=".transportation.Route"
            android:exported="false" />
        <activity
            android:name=".transportation.TransRealtimeLocationActivity"
            android:exported="false"
            android:taskAffinity=""
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".audioguide.AudioGuideBLEControl"
            android:exported="false"
            android:taskAffinity=""
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".audioguide.AudioGuideBLEConnectActivity"
            android:exported="false"
            android:taskAffinity=""
            android:theme="@style/Transportation_Main_Theme" />
        <activity
            android:name=".transportation.TransportInfrmationActivity"
            android:exported="false"
            android:taskAffinity=""
            android:theme="@style/Transportation_Main_Theme" />
        <!--
 <activity
            android:name=".transportation.dialog.TransSavedDialog"
            android:exported="false"
