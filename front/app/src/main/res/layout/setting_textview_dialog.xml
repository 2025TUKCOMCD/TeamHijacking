<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="152dp"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:id="@+id/mainThingLayout"
    android:orientation="vertical"
    android:background="@drawable/setting_view"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:minWidth="152dp">

    <TextView
        android:id="@+id/settingDialogDefaultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="50sp"
        android:textSize="12sp"
        android:text="@string/default_text"
        android:gravity="center"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/NoBtn"
        android:layout_width="wrap_content"
        android:minWidth="48dp"
        android:layout_height="wrap_content"
        android:text="@string/disable"
        android:contentDescription="@string/disable"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:layout_margin="2dp"
        android:background="@drawable/confirm_border"
        android:textAlignment="center"
        android:layout_gravity="end"
        tools:ignore="RtlCompat" />
</LinearLayout>