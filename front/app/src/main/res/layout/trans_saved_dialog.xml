<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="152dp"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:minWidth="152dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".transportation.dialog.TransSavedDialog"
    android:orientation="vertical"
    android:background="@drawable/setting_view"
    android:padding="10dp"
    android:layout_margin="20dp" >

    <TextView
        android:id="@+id/doYouWantSaveTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="50sp"
        android:textSize="12sp"
        android:text="@string/doYouWantSave"
        android:contentDescription="@string/doYouWantSave"
        android:gravity="center"
        android:textColor="@android:color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="70dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/YesSavedBtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:contentDescription="@string/yes"
            android:minWidth="48dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_margin="2dp"
            android:src="@drawable/setting_view"
            android:textAlignment="center"
            android:background="@drawable/confirm_border" />

        <TextView
            android:id="@+id/NoSavedBtt"
            android:layout_width="wrap_content"
            android:minWidth="48dp"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:contentDescription="@string/no"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_margin="2dp"
            android:background="@drawable/confirm_border"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>