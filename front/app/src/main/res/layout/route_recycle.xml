<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/someRootLayout2"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/some_chip"
        android:minHeight="100dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainTransitTypesView"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/defaultText"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/transitCountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="18dp"
                android:padding="2dp"
                android:text="n회"
                android:textColor="#cccccc"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/totalTimeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="47dp"
                android:text="n시간 nn분"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/detatiledPathView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/defaultText"
            android:textColor="#cccccc"
            android:textSize="11sp" />

    </LinearLayout>
</LinearLayout>