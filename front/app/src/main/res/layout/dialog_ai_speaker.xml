<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/black">


        <!-- 상태 텍스트 -->
        <TextView
            android:id="@+id/textSpeakerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스피커 상태 확인 중..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:paddingBottom="16dp"
            android:contentDescription="AI 스피커의 현재 상태를 나타냅니다" />


        <!-- 재생 / 일시정지 버튼 -->
        <Button
            android:id="@+id/btnPlayPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재생 / 일시정지"
            android:layout_marginBottom="16dp"
            android:contentDescription="재생 또는 일시정지 버튼입니다" />


        <!-- 볼륨 조절 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVolumeDown"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="볼륨 ↓"
                android:contentDescription="볼륨을 줄이는 버튼입니다" />

            <Button
                android:id="@+id/btnVolumeUp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="볼륨 ↑"
                android:contentDescription="볼륨을 높이는 버튼입니다" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>