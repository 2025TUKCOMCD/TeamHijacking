<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.front">

    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 화면 안 꺼지게 하기 -->
    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" /> <!-- Data 레이블 사용을 위한 background 권한 요청 -->
    <uses-permission android:name="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE" /> <!-- background 작업 예약 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Front"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".login.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" /> <!-- 이 Activity 가 최초 activity 이며, application 시작 관리자 에 목록 으로 게재됨 -->
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <!-- **카카오 로그인 Redirect URI 처리 (주석 해제됨)** -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="kakaocf939a3f6eb2a3a0c85cce072098dba2" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true" > <!-- 일반적인 사용을 위해 exported="true" 유지 -->
            <!-- Note: 현재 SplashActivity가 LAUNCHER이므로 MainActivity는 LAUNCHER가 아님.
                      SmartThings 딥 링크 처리는 LoginActivity로 이동했으므로 여기서는 불필요. -->
            <!-- **SmartThings OAuth 인증 후 백엔드로부터 돌아오는 딥 링크를 LoginActivity가 처리** -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="seemore"
                    android:host="main" /> <!-- 딥 링크 호스트 -->
            </intent-filter>
        </activity>

        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="oauth"
                    android:scheme="kakaocf939a3f6eb2a3a0c85cce072098dba2" /> <!-- YOUR_NATIVE_APP_KEY 부분을 native 앱 키로 변경 -->
            </intent-filter>
        </activity>


        <!-- 워치로부터 메시지를 수신하기 위한 서비스 등록 (기존과 동일) -->
        <service
            android:name=".PhoneMessageListenerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <!-- Wear OS Message API 액션 -->
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data
                    android:host="*"
                    android:pathPrefix="/kakao"
                    android:scheme="wear" />
            </intent-filter>
        </service>
    </application>

</manifest>
